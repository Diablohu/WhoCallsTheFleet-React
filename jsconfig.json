// See https://go.microsoft.com/fwlink/?LinkId=759670
// for the documentation about the jsconfig.json format
{
    "compilerOptions": {
        "target": "ES6",
        "module": "es6",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "Apps/*": ["./src"],
            "Locales/*": ["./locales"],

            "@app/*": ["./src"],
            "@appConfig/*": ["./src/config"],
            "@appLocales/*": ["./locales"],
            "@appUtils/*": ["./src/utils"],
            "@appData/*": ["./src/data"],
            "@appAssets/*": ["./src/client/assets"],
            "@appUI/*": ["./src/client/ui"],
            "@appLogic/*": ["./src/client/logic"],
            "@appDocs/*": ["./docs"]
        }
    },
    "exclude": [
        ".*",
        "dist*",
        "node_modules"
    ]
}
