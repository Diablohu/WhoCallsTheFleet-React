// See https://go.microsoft.com/fwlink/?LinkId=759670
// for the documentation about the jsconfig.json format
{
    "compilerOptions": {
        "target": "esnext",
        "module": "es2015",
        "checkJs": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"],
            "@docs/*": ["./docs/*"],
            "@locales/*": ["./src/locales/*"],
            "@assets/*": ["./src/assets/*"],
            "@app/*": ["./src/*"],
            "@utils/*": ["./src/utils/*"],
            "@ui/*": ["./src/ui/*"],
            "@api/*": ["./src/api/*"],
            "@const/*": ["./src/constants/*"],
            "@redux/*": ["./src/redux/*"],
            "@actions/*": ["./src/api/actions/*"],
            "@db/*": ["./src/database/*"],
            "@database/*": ["./src/database/*"],
            "~Assets/*": ["./src/assets/*"],
            "~/*": ["./src/ui/*"]
        }
    },
    "exclude": [
        ".*",
        "node_modules",
        "dist*",
        "dev*",
        "logs",
        "pics",
        "src/assets"
    ]
}
