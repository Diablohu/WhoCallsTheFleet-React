// See https://go.microsoft.com/fwlink/?LinkId=759670
// for the documentation about the jsconfig.json format
{
    "compilerOptions": {
        "target": "esnext",
        "module": "es2015",
        "checkJs": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@docs": ["./docs"],
            "@docs/*": ["./docs/*"],
            "@src*": ["./src"],
            "@src/*": ["./src/*"],
            "@app": ["./src"],
            "@app/*": ["./src/*"],
            "@locales": ["./src/locales"],
            "@locales/*": ["./src/locales/*"],
            "@assets": ["./src/assets"],
            "@assets/*": ["./src/assets/*"],
            "@utils": ["./src/utils"],
            "@utils/*": ["./src/utils/*"],
            "@ui": ["./src/ui"],
            "@ui/*": ["./src/ui/*"],
            "@api": ["./src/api"],
            "@api/*": ["./src/api/*"],
            "@const": ["./src/constants"],
            "@const/*": ["./src/constants/*"],
            "@redux": ["./src/redux"],
            "@redux/*": ["./src/redux/*"],
            "@actions": ["./src/api/actions"],
            "@actions/*": ["./src/api/actions/*"],
            "@db": ["./src/database"],
            "@db/*": ["./src/database/*"],
            "@database": ["./src/database"],
            "@database/*": ["./src/database/*"],
            "~Assets/*": ["./src/assets/*"],
            "~/*": ["./src/ui/*"]
        }
    },
    "exclude": [
        ".*",
        "node_modules",
        "dist*",
        "dev*",
        "logs",
        "pics",
        "src/assets"
    ]
}
