// See https://go.microsoft.com/fwlink/?LinkId=759670
// for the documentation about the jsconfig.json format
{
    "compilerOptions": {
        "target": "ES6",
        "module": "es6",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "Apps/*": ["./src/apps"],
            "Locales/*": ["./locales"],

            "@app/*": ["./src/app"],
            "@appConfig/*": ["./src/app/config"],
            "@appLocales/*": ["./locales"],
            "@appUtils/*": ["./src/app/utils"],
            "@appAssets/*": ["./src/app/client/assets"],
            "@appUI/*": ["./src/app/client/ui"],
            "@appLogic/*": ["./src/app/client/logic"],
            "@appDocs/*": ["./docs"]
        }
    },
    "exclude": [
        "dist",
        "node_modules",
        "bower_components",
        "jspm_packages",
        "tmp",
        "temp"
    ],
    "include": [
        "src/**/*"
    ]
}