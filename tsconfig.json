{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@docs": ["./docs"],
            "@docs/*": ["./docs/*"],
            "@src*": ["./src"],
            "@src/*": ["./src/*"],
            "@app": ["./src"],
            "@app/*": ["./src/*"],
            "@locales": ["./src/locales"],
            "@locales/*": ["./src/locales/*"],
            "@assets": ["./src/assets"],
            "@assets/*": ["./src/assets/*"],
            "@utils": ["./src/utils"],
            "@utils/*": ["./src/utils/*"],
            "@ui": ["./src/ui"],
            "@ui/*": ["./src/ui/*"],
            "@components": ["./src/ui/components"],
            "@components/*": ["./src/ui/components/*"],
            "@api": ["./src/api"],
            "@api/*": ["./src/api/*"],
            "@const": ["./src/constants"],
            "@const/*": ["./src/constants/*"],
            "@redux": ["./src/redux"],
            "@redux/*": ["./src/redux/*"],
            "@actions": ["./src/api/actions"],
            "@actions/*": ["./src/api/actions/*"],
            "@db": ["./src/database"],
            "@db/*": ["./src/database/*"],
            "@database": ["./src/database"],
            "@database/*": ["./src/database/*"],
            "~Assets/*": ["./src/assets/*"],
            "~/*": ["./src/ui/*"]
        }
    },
    "include": ["src", "types/**/*.ts"]
}
