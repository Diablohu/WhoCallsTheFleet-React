{
    "name": "whocallsthefleet-yuubari",
    "main": "dist-spa/index.html",
    "version": "1.0.0",
    "description": "Yuubari (Dev) Channel for Who Calls the Fleet (https://yuubari.fleet.moe)",
    "author": {
        "name": "Diablohu",
        "email": "diablohudream@gmail.com",
        "url": "http://diablohu.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/TeamFleet/WhoCallsTheFleet-Yuubari"
    },

    "scripts": {
        "start": "npm run build && npm run prod:run",
        "start:pm2": "cross-env SERVER_PORT=8080 SERVER_DOMAIN=yuubari.fleet.moe npm run build && pm2 restart pm2.json --only fleet-yuubari",
        "start:electron": "electron ./apps/app/electron",

        "prebuild": "node ./scripts/database.js && node ./scripts/less-variables",
        "build": "npm run clean:web && npm run prod:bundle:client && npm run prod:bundle:server && npm run copy:web && npm run clean:web:sourcemap",
        "build:spa": "rimraf ./dist-spa && cross-env WEBPACK_BUILD_ENV=spa WEBPACK_STAGE_MODE=client node ./system/webpack/enter",
        "build:electron": "rimraf ./dist-electron && cross-env WEBPACK_BUILD_ENV=electron WEBPACK_STAGE_MODE=client node ./system/webpack/enter",
        "build:app": "node ./scripts/build-app",

        "dev": "npm run prebuild && npm run pm2:dev",
        "deploy": "git pull && node ./deploy",

        "clean:web": "node ./scripts/clean-web",
        "clean:web:sourcemap": "node ./scripts/clean-web-sourcemap",
        "copy:web": "node ./scripts/copyfiles-web",

        "pm2:dev": "npm run pm2:dev:client && npm run pm2:dev:server && npm run pm2:dev:run",
        "pm2:dev:client": "pm2 restart pm2.json --only fleet-dev-client",
        "pm2:dev:server": "pm2 restart pm2.json --only fleet-dev-server",
        "pm2:dev:run": "pm2 restart pm2.json --only fleet-dev-run --watch",

        "dev:bundle:client": "cross-env WEBPACK_BUILD_ENV=dev WEBPACK_STAGE_MODE=client WEBPACK_DEV_SERVER_PORT=3001 node ./system/webpack/enter",
        "dev:bundle:server": "cross-env WEBPACK_BUILD_ENV=dev WEBPACK_STAGE_MODE=server WEBPACK_DEV_SERVER_PORT=3001 node ./system/webpack/enter",
        "prod:bundle:client": "cross-env WEBPACK_BUILD_ENV=dist WEBPACK_STAGE_MODE=client node ./system/webpack/enter",
        "prod:bundle:server": "cross-env WEBPACK_BUILD_ENV=dist WEBPACK_STAGE_MODE=server node ./system/webpack/enter",
        "prod:run": "cross-env TEST=test node ./dist-web/server",
        "server:run": "cross-env SERVER_DOMAIN=yuubari.fleet.moe node ./dist-web/server",
        "server:run:test": "cross-env SERVER_DOMAIN=yuubari.fleet.test node ./dist-web/server",
        "analyze": "cross-env WEBPACK_BUILD_ENV=dist WEBPACK_STAGE_MODE=client WEBPACK_ANALYZER=true node ./system/webpack/enter",

        "test:server": "npm run prod:bundle:server && npm run prod:run",

        "update": "super update"
    },

    "superProject": {
        "type": "react"
    },

    "dependencies": {
        "kckit": "^1.17.2",
        "whocallsthefleet-database": "2018.04.08",
        "whocallsthefleet-backgrounds": "1.3.1",

        "super-project": "^2.4.0",
        "super-project-cli": "^1.1.7",

        "react-transition-group": "^2.3.0",
        "react-markdown": "^3.3.0",

        "bind-event": "^1.0.5",
        "check-css-prop": "^1.0.1",
        "classnames": "^2.2.5",
        "lz-string": "^1.4.4",
        "localforage": "^1.7.1",
        "metas": "^1.0.1",
        "swiper": "^4.2.2",

        "normalize.css": "^8.0.0",
        "postcss-easing-gradients": "^2.0.1",
        "postcss-pxtorem": "^4.0.1",
        "cssnano": "^4.0.0-rc.2",

        "glob": "^7.1.2",
        "json-pretty": "^0.0.1",
        "request": "^2.85.0",
        "nedb-promise": "^2.0.1",
        "npm-run-script": "^0.0.4",
        "image-size": "^0.6.2",
        "camelcase": "^5.0.0",

        "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
        "copy-webpack-plugin": "^4.5.1",
        "extract-text-webpack-plugin": "^3.0.2",
        "on-build-webpack": "^0.1.0",
        "universal-alias-loader": "^1.2.2",
        "svg-url-loader": "^2.3.2",
        "webpack-config": "^7.5.0",
        "semver": "^5.5.0",

        "simple-git": "^1.92.0"
    },
    "devDependencies": {
        "glob": "^7.1.2",
        "jsonfile": "^4.0.0",
        "ora": "^2.0.0",

        "electron": "~1.8.4",
        "electron-packager": "^12.0.0",
        "electron-windows-store": "^0.12.0",

        "webpack-bundle-analyzer": "^2.11.1",
        "jest": "^22.4.3"
    },
    "optionalDependencies": {
        "node-windows": "^0.1.14"
    },

    "engines": {
        "node" : ">=8.0.0"
    },

    "window": {
        "frame": true,
        "toolbar": false,
        "width": 1280,
        "height": 720,
        "icon": "./app/appicon.png",
        "position": "center",
        "min_width": 640,
        "min_height": 480,
        "as_desktop": false,
        "resizable": true,
        "always-on-top": false,
        "fullscreen": false,
        "show_in_taskbar": true,
        "show": false,
        "kiosk": false,
        "transparent": false
    },
    "platformOverrides": {
        "win": {
            "debug": false,
            "window": {
                "frame": false
            }
        },
        "win32": {
            "debug": false,
            "window": {
                "frame": false
            }
        },
        "osx": {
            "debug": false,
            "window": {
                "frame": true
            }
        },
        "linux": {
            "debug": false,
            "window": {
                "frame": true
            }
        }
    }
}
